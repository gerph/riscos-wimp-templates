/*******************************************************************
 * File:        main
 * Purpose:     WimpTemplates command line tool
 * Author:      Gerph
 ******************************************************************/

#include <stdint.h>
#include <stdlib.h>
#include <stdio.h>
#include <string.h>

#include "templates.h"

#include "VersionNum"

#define DEBUG

#ifdef DEBUG
#define dprintf if (1) printf
#else
#define dprintf if (0) printf
#endif


int main(int argc, char *argv[])
{
    opentemplate_t *ot;
    const char *filename;
    printf("WimpTemplates " Module_FullVersionAndDate "\n");
    if (argc < 2)
    {
        printf("Syntax: WimpTemplates <filename>\n");
        exit(1);
    }

    filename = argv[1];

    ot = templates_open(filename);
    if (!ot)
    {
        printf("Failed to open file\n");
    }

    templates_close(ot);

    exit(EXIT_SUCCESS);
}
